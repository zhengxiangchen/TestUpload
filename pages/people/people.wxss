/* pages/my/index.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 5rpx 0;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.line{
    margin-top: 40rpx;
    height: 36rpx;
    width:100%;
    background-color: #F8F9FA;
}


.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
}
.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}
.weui_cell_hd image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 14px;
  color: #939393;
}

.like-share{
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  margin-top: 15px;
}

.like{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.share{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.work-eye {
    width: 28px;
    height: 28px;
}










.broadcast{
    width:750rpx;
    display: flex;
    flex-direction: column;
}

.slogan{
    width:750rpx;
    height:750rpx;
}

.slogan-image{
    width:750rpx;
    height:750rpx;
}

.braodcast-list{
    width:750rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.braodcast-item{
    width:360rpx;
    height:500rpx;
    display: flex;
    flex-direction: column;
}

.braodcast-image-container{
    width:375rpx;
    height:375rpx;
}

.braodcast-image{
    width:375rpx;
    height:375rpx;
    display: inline-block;
}

.braodcast-info{
    height: 125rpx;
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
    padding-top:10rpx;
}

.braodcast-name{
    text-align: center;
    font-size: 14px;
    line-height: 62.5rpx;
}

.braodcast-text{
    text-align: center;
    font-size: 12px;
    line-height: 62.5rpx;    
}

.que-operate{
    text-align: center;
    width: 100%;
    border-top: solid 1px #ebebeb;
    border-bottom: solid 1px #ebebeb;
    color: #889091;
    vertical-align: middle;
    background: #ffffff;
}
.que-operate .flex-item{
    padding: 15rpx 0;
    font-size: 35rpx;
}
.que-operate .invite{
    border-right: solid 1px #ebebeb;
}